{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "rgb(255,247,238)",
  "padding": 5,
  "width": 250,
  "height": 300,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/usamaqasimmian/FIT3179/main/ICUN%20Classification.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["KINGDOM", "ICUN  Classification", "Percentage"],
          "ops": ["sum"],
          "fields": ["Percentage"],
          "as": ["sum_NUMBER"]
        },
        {
          "type": "stack",
          "groupby": ["KINGDOM"],
          "field": "sum_NUMBER",
          "as": ["sum_NUMBER_start", "sum_NUMBER_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"sum_NUMBER\"]) && isFinite(+datum[\"sum_NUMBER\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "ICUN  Classification"},
          "tooltip": {
            "signal": "{\"KINGDOM\": isValid(datum[\"KINGDOM\"]) ? datum[\"KINGDOM\"] : \"\"+datum[\"KINGDOM\"], \"Percentage\": isValid(datum[\"Percentage\"]) ? datum[\"Percentage\"] : \"\"+datum[\"Percentage\"], \"ICUN  Classification\": isValid(datum[\"ICUN  Classification\"]) ? datum[\"ICUN  Classification\"] : \"\"+datum[\"ICUN  Classification\"]}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Sum of NUMBER: \" + (format(datum[\"sum_NUMBER\"], \"\")) + \"; KINGDOM: \" + (isValid(datum[\"KINGDOM\"]) ? datum[\"KINGDOM\"] : \"\"+datum[\"KINGDOM\"]) + \"; ICUN  Classification: \" + (isValid(datum[\"ICUN  Classification\"]) ? datum[\"ICUN  Classification\"] : \"\"+datum[\"ICUN  Classification\"]) + \"; NUMBER: \" + (isValid(datum[\"NUMBER\"]) ? datum[\"NUMBER\"] : \"\"+datum[\"NUMBER\"])"
          },
          "x": {"scale": "x", "field": "sum_NUMBER_end"},
          "x2": {"scale": "x", "field": "sum_NUMBER_start"},
          "y": {"scale": "y", "field": "KINGDOM"},
          "height": {"scale": "y", "band": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["sum_NUMBER_start", "sum_NUMBER_end"]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "KINGDOM", "sort": false},
      "range": [0, {"signal": "height"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "ICUN  Classification",
        "sort": false
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Percentage",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "KINGDOM",
      "zindex": 0
    }
  ],
  "legends": [{"fill": "color", "title": "ICUN  Classification"}],
  "config": {
    "group": {"fill": "#e5e5e5"},
    "arc": {"fill": "#000"},
    "area": {"fill": "#000"},
    "line": {"stroke": "#000"},
    "path": {"stroke": "#990000"},
    "rect": {"fill": "#000"},
    "shape": {"stroke": "#ab5787"},
    "symbol": {"fill": "#ab5787", "size": 30},
    "axis": {
      "domain": false,
      "grid": true,
      "gridColor": "#FFFFFF",
      "gridOpacity": 1,
      "labelColor": "#979797",
      "labelPadding": 4,
      "tickColor": "#979797",
      "tickSize": 5.67,
      "titleFontSize": 16,
      "titleFontWeight": "normal",
      "domainColor": "#990000",
      "domainWidth": 0.5,
      "gridWidth": 0.2,
      "tickWidth": 0.2,
      "titleColor": "#979797"
    },
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 30,
      "padding": 1,
      "symbolType": "square"
    },
    "range": {
      "category": [
        "#000000",
        "#595959",
        "#cb3232",
        "#cc6633",
        "#cc9900",
        "#97cc9a",
        "#006666"
      ]
    },
    "axisBand": {"grid": false},
    "axisX": {"grid": true, "tickSize": 10},
    "axisY": {"domain": false, "grid": true, "tickSize": 0},
    "style": {
      "arc": {"fill": "#990000"},
      "area": {"fill": "#990000"},
      "line": {"stroke": "#990000"},
      "rect": {"fill": " #990000"}
    }
  }
}